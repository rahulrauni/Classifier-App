<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profileFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="294dp"
        android:src="@drawable/profileback" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageuser"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/headText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="144dp"
        android:layout_marginRight="144dp"
        android:src="@drawable/profiledho"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageuser"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:fontFamily="casual"
        android:text="Rahul Raj"
        android:id="@+id/nameuser"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/profileRegistercard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:padding="5dp"
        app:cardBackgroundColor="@color/design_default_color_surface"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/profileRegister"
            android:layout_width="378dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:padding="5dp"
            android:text="Profile Manager"
            android:textColor="@android:color/black"
            android:textSize="23dp" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/logcard"
        android:layout_below="@+id/profileRegistercard"
        app:cardCornerRadius="10dp">
        <TextView
            android:id="@+id/Myads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:padding="5dp"
            android:text="Myads"
            android:textColor="@android:color/black"
            android:textSize="23dp" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@id/logcard"
        android:id="@+id/sharecards"
        app:cardCornerRadius="10dp">
        <TextView
            android:id="@+id/shareit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:padding="5dp"
            android:text="Share the App with Friends"
            android:textColor="@android:color/black"
            android:textSize="23dp" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@id/sharecards"
        app:cardCornerRadius="10dp">
        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:padding="5dp"
            android:text="Logout-->"
            android:textColor="@android:color/black"
            android:textSize="23dp" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>